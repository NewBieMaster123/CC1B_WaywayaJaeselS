import java.util.Scanner;

public class WaywayaJaesaeL_BaseCalculator {
	public static void main(String args[]){
        Scanner newOBJ = new Scanner(System.in);
        String userInput = "";
        
        while (1 == 1){
            //Ask user for origin number system
            System.out.println("Please enter the desired origin number system (2-16) for the first number. Type \"STOP\" at any given moment to terminate the program.");
            userInput = newOBJ.nextLine().toUpperCase();
           
            if(userInput.equals("STOP")){//Input handling
                break;
            }
            int originSystem = Integer.parseInt(userInput);
            if (originSystem < 2 || originSystem > 16){ //Input handling
                System.out.println("Invalid number. Please enter a value between 2 and 16.");
                continue;
            }
            
            System.out.println("Please enter the desired origin number system (2-16) for the second number. Type \"STOP\" at any given moment to terminate the program.");
            userInput = newOBJ.nextLine().toUpperCase();
           
            if(userInput.equals("STOP")){//Input handling
                break;
            }
            int originSystem2 = Integer.parseInt(userInput);
            if (originSystem2 < 2 || originSystem2 > 16){ //Input handling
                System.out.println("Invalid number. Please enter a value between 2 and 16.");
                continue;
            }
            
            System.out.println("Please enter the desired target number system (2-16) for the second number. Type \"STOP\" at any given moment to terminate the program.");
            userInput = newOBJ.nextLine().toUpperCase();
           
            if(userInput.equals("STOP")){//Input handling
                break;
            }
            int targetSystem = Integer.parseInt(userInput);
            if (targetSystem < 2 || targetSystem > 16){ //Input handling
                System.out.println("Invalid number. Please enter a value between 2 and 16.");
                continue;
            }
            
            System.out.println("Enter the first number. Type \"STOP\" at any given moment to terminate the program.");
            userInput = newOBJ.nextLine().toUpperCase();
           
            if(userInput.equals("STOP")){//Input handling
                break;
            }
            int fNum = Integer.parseInt(userInput, originSystem);
            
            System.out.println("Enter the second number.. Type \"STOP\" at any given moment to terminate the program.");
            userInput = newOBJ.nextLine().toUpperCase();
           
            if(userInput.equals("STOP")){//Input handling
                break;
            }
            int sNum = Integer.parseInt(userInput, originSystem2);
            
            int sum = fNum + sNum;
            int diff = fNum - sNum;
            int quotient = fNum / sNum;
            int remainder = fNum % sNum;
            int product = fNum * sNum;
            
            System.out.println(Integer.toString(sum, targetSystem));
            System.out.println(Integer.toString(diff, targetSystem));
            System.out.println(Integer.toString(quotient, targetSystem));
            System.out.println(Integer.toString(remainder, targetSystem));
            System.out.println(Integer.toString(product, targetSystem));
        }
    }
}
